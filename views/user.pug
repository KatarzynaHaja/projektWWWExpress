extends layout
block content
    div.container
        div.col-sm-8.col-sm-offset-4
            h1 Strona użytkownika
        div.col-sm-8.col-sm-offset-5
            if variable == 'admin'
                p
                    a(href='/panel') Panel administratora
        block form
            form.login-form.form-horizontal(method='post', role='form')
                input(name='_csrf', type='hidden', value=csrfToken)
                div.form-group
                    div.row
                        div.col-sm-8.col-sm-offset-5
                            button.login.btn.btn-primary(type='submit') Wyloguj się

